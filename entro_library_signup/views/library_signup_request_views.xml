<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Sequence for signup request -->
    <record id="sequence_library_signup_request" model="ir.sequence">
        <field name="name">Library Signup Request</field>
        <field name="code">library.signup.request</field>
        <field name="prefix">SIGNUP</field>
        <field name="padding">5</field>
    </record>

    <!-- List view -->
    <record id="view_library_signup_request_list" model="ir.ui.view">
        <field name="name">library.signup.request.list</field>
        <field name="model">library.signup.request</field>
        <field name="arch" type="xml">
            <list string="Yêu cầu đăng ký" decoration-info="state=='pending'" decoration-success="state=='approved'" decoration-danger="state=='rejected'">
                <field name="name"/>
                <field name="full_name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="borrower_type_id"/>
                <field name="state" widget="badge" decoration-info="state=='pending'" decoration-success="state=='approved'" decoration-danger="state=='rejected'"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_library_signup_request_form" model="ir.ui.view">
        <field name="name">library.signup.request.form</field>
        <field name="model">library.signup.request</field>
        <field name="arch" type="xml">
            <form string="Yêu cầu đăng ký">
                <header>
                    <button name="action_approve" string="Duyệt" type="object" class="btn-primary" invisible="state != 'pending'" groups="entro_library.group_library_manager"/>
                    <button name="action_reject" string="Từ chối" type="object" class="btn-danger" invisible="state != 'pending'" groups="entro_library.group_library_manager"/>
                    <button name="action_reset_to_pending" string="Đặt lại chờ duyệt" type="object" invisible="state == 'pending'" groups="entro_library.group_library_manager"/>
                    <button name="action_view_partner" string="Xem Partner" type="object" class="btn-secondary" invisible="not partner_id" groups="entro_library.group_library_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,approved"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_partner" type="object" class="oe_stat_button" icon="fa-user" invisible="not partner_id" groups="entro_library.group_library_manager">
                            <div class="o_stat_info"><span class="o_stat_text">Partner</span></div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>

                    <group>
                        <group string="Thông tin cá nhân">
                            <field name="full_name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="date_of_birth"/>
                            <field name="gender"/>
                        </group>
                        <group string="Loại độc giả">
                            <field name="borrower_type_id"/>
                            <field name="organization"/>
                        </group>
                    </group>

                    <group string="Địa chỉ">
                        <group>
                            <field name="street"/>
                            <field name="street2"/>
                            <field name="city"/>
                        </group>
                        <group>
                            <field name="state_id"/>
                            <field name="zip"/>
                            <field name="country_id"/>
                        </group>
                    </group>

                    <group string="Giấy tờ">
                        <group>
                            <field name="id_card_number"/>
                        </group>
                        <group>
                            <field name="student_id"/>
                        </group>
                    </group>

                    <group string="Ghi chú">
                        <field name="notes" nolabel="1"/>
                    </group>

                    <notebook invisible="state == 'pending'">
                        <page string="Thông tin duyệt" invisible="state != 'approved'">
                            <group>
                                <group>
                                    <field name="approved_by" readonly="1"/>
                                    <field name="approved_date" readonly="1"/>
                                </group>
                                <group>
                                    <field name="partner_id" readonly="1"/>
                                    <field name="user_id" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Lý do từ chối" invisible="state != 'rejected'">
                            <group>
                                <field name="rejection_reason" nolabel="1" placeholder="Nhập lý do từ chối..."/>
                            </group>
                            <group>
                                <group>
                                    <field name="rejected_by" readonly="1"/>
                                    <field name="rejected_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_library_signup_request_search" model="ir.ui.view">
        <field name="name">library.signup.request.search</field>
        <field name="model">library.signup.request</field>
        <field name="arch" type="xml">
            <search string="Tìm yêu cầu đăng ký">
                <field name="name"/>
                <field name="full_name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="borrower_type_id"/>
                <filter string="Chờ duyệt" name="pending" domain="[('state','=','pending')]"/>
                <filter string="Đã duyệt" name="approved" domain="[('state','=','approved')]"/>
                <filter string="Đã từ chối" name="rejected" domain="[('state','=','rejected')]"/>
                <group expand="0" string="Group By">
                    <filter string="Trạng thái" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Loại độc giả" name="group_borrower_type" context="{'group_by':'borrower_type_id'}"/>
                    <filter string="Ngày tạo" name="group_create_date" context="{'group_by':'create_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_signup_request" model="ir.actions.act_window">
        <field name="name">Yêu cầu đăng ký</field>
        <field name="res_model">library.signup.request</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_pending': 1}</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_library_signup_request" name="Yêu cầu đăng ký" parent="entro_library.menu_library_management" action="action_library_signup_request" sequence="100" groups="entro_library.group_library_manager"/>

</odoo>
