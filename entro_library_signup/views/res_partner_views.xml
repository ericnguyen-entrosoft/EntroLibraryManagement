<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add signup fields to partner form -->
    <record id="view_partner_form_signup" model="ir.ui.view">
        <field name="name">res.partner.form.signup</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="entro_library.view_partner_form_library"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='library_borrower']/group[1]" position="after">
                <group string="Giấy tờ &amp; Thông tin bổ sung">
                    <group>
                        <field name="id_card_number"/>
                        <field name="student_id"/>
                    </group>
                    <group>
                        <field name="date_of_birth"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
