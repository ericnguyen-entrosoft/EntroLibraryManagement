<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Library Book Form View -->
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">product.template</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Library Book">
                <header>
                    <field name="is_available" invisible="1"/>
                    <button name="action_borrow_book" string="Borrow Book" type="object" 
                            class="btn-primary" invisible="not is_available"/>
                    <button name="action_return_book" string="Return Book" type="object" 
                            class="btn-success" invisible="is_available"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action" icon="fa-book">
                            <field string="Times Borrowed" name="borrowed_count" widget="statinfo"/>
                        </button>
                    </div>
                    
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                    
                    <div class="oe_title">
                        <label for="name" string="Book Title"/>
                        <h1>
                            <field name="name" required="1" placeholder="Book Title"/>
                        </h1>
                        <label for="author"/>
                        <h2>
                            <field name="author" placeholder="Author Name"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group name="book_info">
                            <field name="is_book" invisible="1"/>
                            <field name="isbn"/>
                            <field name="publisher"/>
                            <field name="publication_date"/>
                            <field name="genre"/>
                            <field name="pages"/>
                            <field name="language"/>
                        </group>
                        <group name="library_info">
                            <field name="book_condition"/>
                            <field name="library_location"/>
                            <field name="is_available" readonly="1"/>
                            <field name="borrowed_by" readonly="1" invisible="is_available"/>
                            <field name="borrowed_date" readonly="1" invisible="is_available"/>
                            <field name="return_date" readonly="1" invisible="is_available"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page string="Sales Information" name="sales">
                            <group>
                                <group name="pricing">
                                    <field name="list_price" string="Sale Price"/>
                                    <field name="standard_price" string="Cost Price"/>
                                </group>
                                <group name="product_info">
                                    <field name="categ_id"/>
                                    <field name="barcode"/>
                                </group>
                            </group>
                        </page>
                        <page string="Inventory" name="inventory">
                            <group>
                                <group name="inventory">
                                    <field name="type"/>
                                    <field name="tracking"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Library Book Tree View -->
    <record id="view_library_book_tree" model="ir.ui.view">
        <field name="name">library.book.tree</field>
        <field name="model">product.template</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <tree string="Library Books" decoration-danger="not is_available" 
                  decoration-success="is_available">
                <field name="name"/>
                <field name="author"/>
                <field name="isbn"/>
                <field name="genre"/>
                <field name="publisher"/>
                <field name="publication_date"/>
                <field name="book_condition"/>
                <field name="library_location"/>
                <field name="is_available"/>
                <field name="borrowed_by"/>
                <field name="borrowed_count"/>
                <field name="list_price"/>
            </tree>
        </field>
    </record>

    <!-- Library Book Kanban View -->
    <record id="view_library_book_kanban" model="ir.ui.view">
        <field name="name">library.book.kanban</field>
        <field name="model">product.template</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="author"/>
                <field name="genre"/>
                <field name="is_available"/>
                <field name="borrowed_by"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('product.template', 'image_128', record.id.raw_value)" 
                                     alt="Book Cover" class="o_image_64_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <small><field name="author"/></small>
                                    </div>
                                    <span class="o_kanban_record_subtitle">
                                        <field name="genre"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.is_available.raw_value" 
                                              class="badge badge-success">Available</span>
                                        <span t-else="" class="badge badge-danger">
                                            Borrowed by <field name="borrowed_by"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_library_books" model="ir.actions.act_window">
        <field name="name">Library Books</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_book', '=', True)]</field>
        <field name="context">{'default_is_book': True, 'default_type': 'product', 'default_tracking': 'serial'}</field>
        <field name="view_ids" eval="[(5, 0, 0),
                                       (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_library_book_kanban')}),
                                       (0, 0, {'view_mode': 'tree', 'view_id': ref('view_library_book_tree')}),
                                       (0, 0, {'view_mode': 'form', 'view_id': ref('view_library_book_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first library book!
            </p>
            <p>
                Add books to your library management system with detailed information
                including ISBN, author, publisher, and track borrowing status.
            </p>
        </field>
    </record>

    <!-- Available Books Action -->
    <record id="action_available_books" model="ir.actions.act_window">
        <field name="name">Available Books</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_book', '=', True), ('is_available', '=', True)]</field>
        <field name="context">{'default_is_book': True, 'default_type': 'product', 'default_tracking': 'serial'}</field>
        <field name="view_ids" eval="[(5, 0, 0),
                                       (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_library_book_kanban')}),
                                       (0, 0, {'view_mode': 'tree', 'view_id': ref('view_library_book_tree')}),
                                       (0, 0, {'view_mode': 'form', 'view_id': ref('view_library_book_form')})]"/>
    </record>

    <!-- Borrowed Books Action -->
    <record id="action_borrowed_books" model="ir.actions.act_window">
        <field name="name">Borrowed Books</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_book', '=', True), ('is_available', '=', False)]</field>
        <field name="context">{'default_is_book': True, 'default_type': 'product', 'default_tracking': 'serial'}</field>
        <field name="view_ids" eval="[(5, 0, 0),
                                       (0, 0, {'view_mode': 'tree', 'view_id': ref('view_library_book_tree')}),
                                       (0, 0, {'view_mode': 'form', 'view_id': ref('view_library_book_form')})]"/>
    </record>
</odoo>