<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Library Borrowing Manager Group -->
        <record id="group_library_borrowing_manager" model="res.groups">
            <field name="name">Library Borrowing Manager</field>
            <field name="category_id" ref="library.module_category_school"/>
            <field name="implied_ids" eval="[(4, ref('library.group_librarian'))]"/>
        </record>

        <!-- Library Portal User Group -->
        <record id="group_library_portal_user" model="res.groups">
            <field name="name">Library Portal User</field>
            <field name="category_id" ref="library.module_category_school"/>
            <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
        </record>

        <!-- Record Rules -->
        
        <!-- Public Access Rules for Books -->
        <record id="product_template_public_books" model="ir.rule">
            <field name="name">Public Book Access</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="domain_force">[('website_published', '=', True), ('sale_ok', '=', True), ('categ_id.book_categ', '=', True)]</field>
            <field name="groups" eval="[(4, ref('base.group_public')), (4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="product_product_public_books" model="ir.rule">
            <field name="name">Public Book Variants Access</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="domain_force">[('product_tmpl_id.website_published', '=', True), ('sale_ok', '=', True), ('categ_id.book_categ', '=', True)]</field>
            <field name="groups" eval="[(4, ref('base.group_public')), (4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="product_category_public_books" model="ir.rule">
            <field name="name">Public Book Categories Access</field>
            <field name="model_id" ref="product.model_product_category"/>
            <field name="domain_force">[('book_categ', '=', True)]</field>
            <field name="groups" eval="[(4, ref('base.group_public')), (4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="library_author_public" model="ir.rule">
            <field name="name">Public Authors Access</field>
            <field name="model_id" ref="library.model_library_author"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_public')), (4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="stock_lot_public_books" model="ir.rule">
            <field name="name">Public Book Serials Access</field>
            <field name="model_id" ref="stock.model_stock_lot"/>
            <field name="domain_force">[('product_id.categ_id.book_categ', '=', True)]</field>
            <field name="groups" eval="[(4, ref('base.group_public')), (4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Sale Order - Library Borrowing -->
        <record id="sale_order_library_borrowing_rule" model="ir.rule">
            <field name="name">Library Borrowing Orders: Portal Users</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id), ('is_library_borrowing', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_library_portal_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Stock Picking - Library Transfers -->
        <record id="stock_picking_library_rule" model="ir.rule">
            <field name="name">Library Transfers: Portal Users</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id), '|', ('is_library_borrowing', '=', True), ('is_book_return', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_library_portal_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>