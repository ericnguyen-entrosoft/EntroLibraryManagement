<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Library Borrowing Location -->
        <record id="stock_location_library_borrowing" model="stock.location">
            <field name="name">Library Borrowing</field>
            <field name="usage">internal</field>
            <field name="location_id" ref="stock.stock_location_locations"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="comment">Location for books that are currently borrowed</field>
        </record>

        <!-- Library Returns Location -->
        <record id="stock_location_library_returns" model="stock.location">
            <field name="name">Library Returns</field>
            <field name="usage">internal</field>
            <field name="location_id" ref="stock.stock_location_locations"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="comment">Location for returned books waiting to be reshelved</field>
        </record>

        <!-- Website Menu for Library -->
        <record id="website_library_menu" model="website.menu">
            <field name="name">Library</field>
            <field name="url">/library</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">40</field>
        </record>

        <!-- Website Submenu - Browse Books -->
        <record id="website_library_books_menu" model="website.menu">
            <field name="name">Browse Books</field>
            <field name="url">/library/books</field>
            <field name="parent_id" ref="website_library_menu"/>
            <field name="sequence">10</field>
        </record>

        <!-- Website Submenu - My Books -->
        <record id="website_library_my_books_menu" model="website.menu">
            <field name="name">My Books</field>
            <field name="url">/library/my-books</field>
            <field name="parent_id" ref="website_library_menu"/>
            <field name="sequence">20</field>
        </record>

        <!-- Website Submenu - Return Info -->
        <record id="website_library_return_info_menu" model="website.menu">
            <field name="name">Return Information</field>
            <field name="url">/library/return-info</field>
            <field name="parent_id" ref="website_library_menu"/>
            <field name="sequence">30</field>
        </record>

    </data>
</odoo>