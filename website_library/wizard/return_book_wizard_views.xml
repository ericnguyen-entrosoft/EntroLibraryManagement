<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Return Book Wizard Form View -->
    <record id="return_book_wizard_form" model="ir.ui.view">
        <field name="name">library.return.book.wizard.form</field>
        <field name="model">library.return.book.wizard</field>
        <field name="arch" type="xml">
            <form string="Return Borrowed Books">
                <group>
                    <field name="sale_order_id" readonly="1"/>
                    <field name="return_location_id" required="1"/>
                    <field name="picking_ids" widget="many2many_tags" readonly="1"/>
                </group>
                
                <notebook>
                    <page string="Books to Return">
                        <field name="return_line_ids">
                            <list editable="bottom">
                                <field name="to_return"/>
                                <field name="product_id" readonly="1"/>
                                <field name="lot_id" readonly="1"/>
                                <field name="quantity" readonly="1"/>
                                <field name="picking_id" readonly="1"/>
                            </list>
                        </field>
                    </page>
                    <page string="Notes">
                        <field name="notes" placeholder="Add any notes about the return..."/>
                    </page>
                </notebook>
                
                <footer>
                    <button string="Create Return" name="create_return_picking" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Return Book Wizard Action -->
    <record id="action_return_book_wizard" model="ir.actions.act_window">
        <field name="name">Return Books</field>
        <field name="res_model">library.return.book.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>