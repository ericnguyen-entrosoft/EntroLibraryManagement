<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Extend website header to add cart -->
    <template id="website_library_header_cart" inherit_id="website.layout">
        <xpath expr="//header//div[hasclass('o_header_right')]" position="inside">
            <t t-if="website_library_order and website_library_order.order_line">
                <a href="/library/cart" class="btn btn-outline-primary btn-sm library-cart-btn">
                    <i class="fa fa-shopping-cart"></i>
                    <span class="badge badge-pill badge-secondary library-cart-counter">
                        <t t-esc="len(website_library_order.order_line)"/>
                    </span>
                </a>
            </t>
        </xpath>
    </template>

    <!-- Library Books Listing Template -->
    <template id="library_books" name="Library Books">
        <t t-call="website.layout">
            <t t-set="title">Library Books</t>
            <div id="wrap" class="oe_structure library-books-page">
                <div class="container mt-3">
                    
                    <!-- Page Header -->
                    <div class="row">
                        <div class="col-12">
                            <h1>Library Books</h1>
                            <p class="lead">Browse and borrow books from our collection</p>
                        </div>
                    </div>
                    
                    <!-- Search and Filters -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <form method="get" class="d-flex">
                                <input type="text" name="search" class="form-control me-2" 
                                       placeholder="Search books..." t-att-value="search"/>
                                <button type="submit" class="btn btn-primary">Search</button>
                            </form>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex justify-content-end">
                                <span class="text-muted">
                                    <t t-esc="search_count"/> books found
                                </span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Categories Filter -->
                    <div class="row mb-4" t-if="categories">
                        <div class="col-12">
                            <h5>Categories</h5>
                            <div class="d-flex flex-wrap">
                                <a href="/library" class="btn btn-outline-secondary btn-sm me-2 mb-2">All Categories</a>
                                <t t-foreach="categories" t-as="cat">
                                    <a t-attf-href="/library?category={{ cat.id }}" 
                                       t-attf-class="btn btn-outline-secondary btn-sm me-2 mb-2 {{ 'active' if category and category.id == cat.id else '' }}">
                                        <t t-esc="cat.name"/>
                                    </a>
                                </t>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Products Grid -->
                    <div class="row">
                        <t t-foreach="products" t-as="product">
                            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                                <div class="card h-100">
                                    <!-- Book Image -->
                                    <t t-set="product_image" t-value="product.image_1920"/>
                                    <div class="card-img-top d-flex align-items-center justify-content-center" 
                                         style="height: 250px; background-color: #f8f9fa;">
                                        <t t-if="product_image">
                                            <img t-attf-src="data:image/png;base64,{{ product_image }}" 
                                                 class="img-fluid" style="max-height: 200px;"/>
                                        </t>
                                        <t t-else="">
                                            <i class="fa fa-book fa-5x text-muted"></i>
                                        </t>
                                    </div>
                                    
                                    <!-- Book Details -->
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">
                                            <a t-attf-href="/library/book/{{ product.id }}" class="text-decoration-none">
                                                <t t-esc="product.name"/>
                                            </a>
                                        </h5>
                                        
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <t t-if="product.author">Author: <t t-esc="product.author.name"/></t>
                                                <t t-if="product.isbn"><br/>ISBN: <t t-esc="product.isbn"/></t>
                                            </small>
                                        </p>
                                        
                                        <!-- Availability Status -->
                                        <div class="mt-auto">
                                            <t t-if="product.product_variant_id.availability == 'available'">
                                                <span class="badge bg-success">Available</span>
                                                <small class="text-muted">
                                                    (<t t-esc="product.product_variant_id.available_lots"/> copies)
                                                </small>
                                            </t>
                                            <t t-else="">
                                                <span class="badge bg-danger">Not Available</span>
                                            </t>
                                        </div>
                                        
                                        <!-- Action Button -->
                                        <div class="mt-2">
                                            <a t-attf-href="/library/book/{{ product.id }}" 
                                               class="btn btn-primary btn-sm w-100">
                                                View Details
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                    
                    <!-- Pagination -->
                    <div class="row" t-if="pager">
                        <div class="col-12">
                            <t t-call="website.pager"/>
                        </div>
                    </div>
                    
                </div>
            </div>
        </t>
    </template>

    <!-- Book Detail Template -->
    <template id="book_detail" name="Book Detail">
        <t t-call="website.layout">
            <t t-set="title" t-value="product.name"/>
            <t t-set="website_meta_title" t-value="product.name"/>
            <t t-set="website_meta_description" t-value="product.description_sale"/>
            <t t-set="website_meta_keywords" t-value="product.name + (', ' + product.author.name if product.author else '')"/>
            <div id="wrap" class="oe_structure book-detail-page">
                <div class="container mt-3">
                    
                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/library">Library</a></li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <t t-esc="product.name"/>
                            </li>
                        </ol>
                    </nav>
                    
                    <div class="row">
                        <!-- Book Image -->
                        <div class="col-md-4">
                            <t t-set="product_image" t-value="product.image_1920"/>
                            <div class="text-center mb-4">
                                <t t-if="product_image">
                                    <img t-attf-src="data:image/png;base64,{{ product_image }}" 
                                         class="img-fluid" style="max-height: 400px;"/>
                                </t>
                                <t t-else="">
                                    <div class="d-flex align-items-center justify-content-center" 
                                         style="height: 400px; background-color: #f8f9fa;">
                                        <i class="fa fa-book fa-8x text-muted"></i>
                                    </div>
                                </t>
                            </div>
                        </div>
                        
                        <!-- Book Information -->
                        <div class="col-md-8">
                            <h1 t-esc="product.name"/>
                            
                            <div class="mb-3">
                                <t t-if="product.author">
                                    <p><strong>Author:</strong> <t t-esc="product.author.name"/></p>
                                </t>
                                <t t-if="product.isbn">
                                    <p><strong>ISBN:</strong> <t t-esc="product.isbn"/></p>
                                </t>
                                <t t-if="product.categ_id">
                                    <p><strong>Category:</strong> <t t-esc="product.categ_id.name"/></p>
                                </t>
                                <t t-if="product.nbpage">
                                    <p><strong>Pages:</strong> <t t-esc="product.nbpage"/></p>
                                </t>
                            </div>
                            
                            <!-- Description -->
                            <t t-if="product.description_sale">
                                <h4>Description</h4>
                                <div t-field="product.description_sale" class="mb-4"/>
                            </t>
                            
                            <!-- Availability and Borrowing -->
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Availability</h5>
                                    
                                    <t t-if="product.product_variant_id.availability == 'available' and available_count > 0">
                                        <div class="alert alert-success">
                                            <i class="fa fa-check-circle"></i>
                                            <strong>Available</strong> - <t t-esc="available_count"/> copies available
                                        </div>
                                        
                                        <!-- Add to Cart Form -->
                                        <form action="/library/cart/add" method="post" class="d-inline library-add-cart-form">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                            <input type="hidden" name="product_id" t-att-value="product.product_variant_id.id"/>
                                            
                                            <!-- Serial Selection -->
                                            <t t-if="available_lots">
                                                <div class="mb-3">
                                                    <label class="form-label">Select Copy:</label>
                                                    <select name="lot_id" class="form-select js_library_lot_select">
                                                        <option value="">Any Available Copy</option>
                                                        <t t-foreach="available_lots" t-as="lot">
                                                            <option t-att-value="lot.id">
                                                                Serial: <t t-esc="lot.name"/>
                                                            </option>
                                                        </t>
                                                    </select>
                                                    <div class="selected-serial-info mt-2" style="display: none;"></div>
                                                </div>
                                            </t>
                                            
                                            <button type="submit" class="btn btn-primary btn-lg js_library_add_cart">
                                                <i class="fa fa-plus"></i> Add to Borrowing Cart
                                            </button>
                                        </form>
                                    </t>
                                    
                                    <t t-else="">
                                        <div class="alert alert-warning">
                                            <i class="fa fa-exclamation-triangle"></i>
                                            <strong>Not Available</strong> - All copies are currently borrowed
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Library Cart Template -->
    <template id="library_cart" name="Library Cart">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <div class="container mt-3">
                    <h1>Borrowing Cart</h1>
                    
                    <t t-if="website_sale_order and website_sale_order.order_line">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Books to Borrow</h5>
                                        
                                        <div class="table-responsive">
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th>Book</th>
                                                        <th>Serial</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="website_sale_order.order_line" t-as="line">
                                                        <tr>
                                                            <td>
                                                                <strong t-esc="line.product_id.name"/>
                                                                <t t-if="line.product_id.author">
                                                                    <br/><small class="text-muted">by <t t-esc="line.product_id.author.name"/></small>
                                                                </t>
                                                            </td>
                                                            <td>
                                                                <t t-if="line.lot_id">
                                                                    <t t-esc="line.lot_id.name"/>
                                                                </t>
                                                                <t t-else="">
                                                                    Any available
                                                                </t>
                                                            </td>
                                                            <td>
                                                                <form action="/library/cart/remove" method="post" class="d-inline">
                                                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                                    <input type="hidden" name="line_id" t-att-value="line.id"/>
                                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                                        <i class="fa fa-trash"></i> Remove
                                                                    </button>
                                                                </form>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Summary</h5>
                                        <p>Books to borrow: <strong t-esc="len(website_sale_order.order_line)"/></p>
                                        <p class="text-muted">
                                            <small>Standard borrowing period: 14 days</small>
                                        </p>
                                        
                                        <div class="d-grid gap-2">
                                            <a href="/library/borrow" class="btn btn-primary btn-lg">
                                                Proceed to Borrow
                                            </a>
                                            <a href="/library" class="btn btn-outline-secondary">
                                                Continue Browsing
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                    
                    <t t-else="">
                        <div class="text-center py-5">
                            <i class="fa fa-shopping-cart fa-4x text-muted mb-3"></i>
                            <h3>Your borrowing cart is empty</h3>
                            <p class="text-muted">Add some books to your cart to get started</p>
                            <a href="/library" class="btn btn-primary">Browse Books</a>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

</odoo>