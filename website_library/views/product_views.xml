<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Product Template Form View - Add Website Button -->
    <record id="product_template_form_view_library" model="ir.ui.view">
        <field name="name">product.template.form.library</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_website" type="object" 
                        string="View on Website" 
                        class="oe_stat_button" 
                        icon="fa-globe"
                        groups="website.group_website_designer"
                        invisible="not categ_id or not categ_id.book_categ"/>
            </xpath>
        </field>
    </record>

    <!-- Product Template Tree View - Add availability column -->
    <record id="product_template_tree_view_library" model="ir.ui.view">
        <field name="name">product.template.tree.library</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="list_price" position="after">
                <field name="availability" string="Availability" 
                       invisible="not categ_id or not categ_id.book_categ"/>
                <field name="available_lots" string="Available Copies" 
                       invisible="not categ_id or not categ_id.book_categ"/>
            </field>
        </field>
    </record>

</odoo>