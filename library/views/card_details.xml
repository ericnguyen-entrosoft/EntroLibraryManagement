<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="card_details">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page" style="height: 2px;">
                    <div class="oe_structure" />
                    <br />
                    <br />
                    <table>
                        <tr>
                            <td>
                                <table>
                                    <tr>
                                        <td align="center">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td height="10px" />
                                    </tr>
                                    <tr>
                                        <td align="center" height="30px">
                                            <strong>
                                                <span t-field="o.card_name" />
                                            </strong>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td style="padding-left: 50px">
                                <table>
                                    <tr>
                                        <td width="100%" align="center" height="15">
                                            <strong>
                                                Library Card Details
                                            </strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td height="120">
                                            <table width="100%">
                                                <tr>
                                                    <td
                                                        style="font-family: 'Helvetica';padding-left:20px;"
                                                    >
                                                        <strong>Card Code</strong>
                                                    </td>
                                                    <td>
                                                        <strong>: </strong>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.code" />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td
                                                        style="font-family: 'Helvetica';padding-left:20px;"
                                                    >
                                                        <strong>User Type</strong>
                                                    </td>
                                                    <td>
                                                        <strong>: </strong>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.user" />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td
                                                        style="font-family: 'Helvetica';padding-left:20px;"
                                                    >
                                                        <strong>User Category</strong>
                                                    </td>
                                                    <td>
                                                        <strong>: </strong>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.user_type" />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td
                                                        style="font-family: 'Helvetica';padding-left:20px;"
                                                    >
                                                        <strong>Book Limit</strong>
                                                    </td>
                                                    <td>
                                                        <strong>: </strong>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.book_limit" />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td
                                                        style="font-family: 'Helvetica';padding-left:20px;"
                                                    >
                                                        <strong>Start Date</strong>
                                                    </td>
                                                    <td>
                                                        <strong>: </strong>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.start_date" />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td
                                                        style="font-family: 'Helvetica';padding-left:20px;"
                                                    >
                                                        <strong>End Date</strong>
                                                    </td>
                                                    <td>
                                                        <strong>: </strong>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.end_date" />
                                                    </td>
                                                </tr>
                                                <tr t-if="o.partner_id">
                                                    <td
                                                        style="font-family: 'Helvetica';padding-left:20px;"
                                                    >
                                                        <strong>Contact</strong>
                                                    </td>
                                                    <td>
                                                        <strong>: </strong>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.partner_id.name" />
                                                    </td>
                                                </tr>
                                                <tr t-if="o.partner_id.email">
                                                    <td
                                                        style="font-family: 'Helvetica';padding-left:20px;"
                                                    >
                                                        <strong>Email</strong>
                                                    </td>
                                                    <td>
                                                        <strong>: </strong>
                                                    </td>
                                                    <td>
                                                        <span t-field="o.partner_id.email" />
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>