<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Paper Format for Library Card -->
    <record id="paperformat_library_card" model="report.paperformat">
        <field name="name">Library Card Format</field>
        <field name="default" eval="False"/>
        <field name="format">custom</field>
        <field name="page_height">86</field>
        <field name="page_width">140</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">96</field>
    </record>

    <!-- Report Action for Library Card -->
    <record id="action_report_library_card" model="ir.actions.report">
        <field name="name">In thẻ thư viện</field>
        <field name="model">library.card</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">library.report_library_card</field>
        <field name="report_file">library.report_library_card</field>
        <field name="binding_model_id" ref="model_library_card"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_library_card"/>
    </record>

    <!-- Report Template -->
    <template id="report_library_card">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="card">
                <t t-call="web.basic_layout">
                    <div class="page" style="font-family: Arial, sans-serif; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 10mm; border-radius: 10px;">
                        
                        <!-- Header -->
                        <div style="text-align: center; border-bottom: 2px solid white; padding-bottom: 5mm; margin-bottom: 5mm;">
                            <h2 style="margin: 0; font-size: 18px; font-weight: bold;">THẺ THƯ VIỆN</h2>
                            <div style="font-size: 12px; margin-top: 2mm;">LIBRARY CARD</div>
                        </div>
                        
                        <!-- Main Content -->
                        <div style="display: flex; align-items: flex-start; gap: 8mm;">
                            <!-- Left Side - Info -->
                            <div style="flex: 1;">
                                <!-- Card Code -->
                                <div style="margin-bottom: 4mm;">
                                    <div style="font-size: 10px; opacity: 0.8;">Số thẻ / Card No:</div>
                                    <div style="font-size: 16px; font-weight: bold;">
                                        <t t-esc="card.code"/>
                                    </div>
                                </div>
                                
                                <!-- Card Holder Name -->
                                <div style="margin-bottom: 4mm;">
                                    <div style="font-size: 10px; opacity: 0.8;">Tên / Name:</div>
                                    <div style="font-size: 14px; font-weight: bold;">
                                        <t t-esc="card.card_name"/>
                                    </div>
                                </div>
                                
                                <!-- User Type -->
                                <div style="margin-bottom: 4mm;">
                                    <div style="font-size: 10px; opacity: 0.8;">Loại thẻ / Type:</div>
                                    <div style="font-size: 12px;">
                                        <t t-if="card.user == 'student'">Học sinh / Student</t>
                                        <t t-if="card.user == 'teacher'">Giáo viên / Teacher</t>
                                    </div>
                                </div>
                                
                                
                                <!-- Valid Dates -->
                                <div style="margin-bottom: 2mm;">
                                    <div style="font-size: 9px; opacity: 0.8;">
                                        Từ / From: <t t-esc="card.start_date"/> 
                                        Đến / To: <t t-esc="card.end_date"/>
                                    </div>
                                </div>
                                
                                <!-- Book Limit -->
                                <div style="font-size: 9px; opacity: 0.8;">
                                    Giới hạn sách: <t t-esc="card.book_limit"/> cuốn
                                </div>
                            </div>
                            
                            <!-- Right Side - Barcode -->
                            <div style="text-align: center; background: white; padding: 4mm; border-radius: 5px;">
                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=%s' % ('Code128', card.card_barcode, 150, 40, 1)" 
                                     style="width: 25mm; height: 8mm;"/>
                                <div style="font-size: 8px; color: black; margin-top: 2mm; font-family: monospace;">
                                    <t t-esc="card.card_barcode"/>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Footer -->
                        <div style="text-align: center; font-size: 8px; margin-top: 5mm; opacity: 0.8; border-top: 1px solid rgba(255,255,255,0.3); padding-top: 3mm;">
                            Vui lòng xuất trình thẻ khi mượn sách • Please present this card when borrowing books
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>