<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View for Book Borrow Wizard -->
    <record id="library_book_borrow_wizard_form" model="ir.ui.view">
        <field name="name">library.book.borrow.wizard.form</field>
        <field name="model">library.book.borrow.wizard</field>
        <field name="arch" type="xml">
            <form string="Mượn sách">
                <group>
                    <field name="product_id" readonly="1"/>
                    <field name="available_lot_ids" invisible="1"/>
                    <field name="lot_id" 
                           domain="[('id', 'in', available_lot_ids)]"
                           options="{'no_create': True, 'no_create_edit': True}"/>
                    <field name="library_card_id" options="{'no_create': True, 'no_create_edit': True}"/>
                    <field name="borrower_name"/>
                    <field name="borrower_info"/>
                    <field name="due_date"/>
                </group>
                <footer>
                    <button name="action_borrow_book" 
                            string="Mượn sách" 
                            type="object" 
                            class="oe_highlight"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>