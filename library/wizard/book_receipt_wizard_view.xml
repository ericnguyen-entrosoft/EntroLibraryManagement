<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View for Book Receipt Wizard -->
    <record id="library_book_receipt_wizard_form" model="ir.ui.view">
        <field name="name">library.book.receipt.wizard.form</field>
        <field name="model">library.book.receipt.wizard</field>
        <field name="arch" type="xml">
            <form string="Tạo phiếu nhập sách">
                <group>
                    <field name="product_id" readonly="1"/>
                    <field name="quantity"/>
                    <field name="receiving_date"/>
                    <field name="location_id"/>
                </group>
                <footer>
                    <button name="action_create_receipt" 
                            string="Tạo phiếu nhập" 
                            type="object" 
                            class="oe_highlight"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>