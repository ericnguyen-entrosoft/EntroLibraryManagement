<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- list View -->
    <record id="view_library_menu_category_list" model="ir.ui.view">
        <field name="name">library.menu.category.list</field>
        <field name="model">library.menu.category</field>
        <field name="arch" type="xml">
            <list string="Danh mục Menu">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="menu_type"/>
                <field name="url_key"/>
                <field name="full_url"/>
                <field name="media_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_menu_category_form" model="ir.ui.view">
        <field name="name">library.menu.category.form</field>
        <field name="model">library.menu.category</field>
        <field name="arch" type="xml">
            <form string="Danh mục Menu">
                <sheet>
                    <field name="banner_image" widget="image" class="oe_avatar"
                           options="{'preview_image': 'banner_image', 'size': [1920, 400]}"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_media" type="object"
                                class="oe_stat_button" icon="fa-file-video-o">
                            <field name="media_count" widget="statinfo" string="Phương tiện"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            invisible="active"/>
                    <group>
                        <group>
                            <field name="name" placeholder="vd: Thiền Vipassana"/>
                            <field name="parent_id"
                                   domain="[('menu_type', '=', menu_type)]"
                                   options="{'no_create': True}"/>
                            <field name="menu_type"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="url_key" placeholder="vd: thien-vipassana"/>
                            <field name="full_url" readonly="1" widget="url"/>
                            <field name="sequence"/>
                            <field name="icon" placeholder="fa-book"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Mô tả danh mục..."/>
                    </group>
                    <notebook>
                        <page string="Danh mục con" name="children">
                            <field name="child_ids" context="{'default_menu_type': menu_type}">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="url_key"/>
                                    <field name="icon"/>
                                    <field name="media_count"/>
                                    <field name="menu_type" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_menu_category" model="ir.actions.act_window">
        <field name="name">Danh mục Menu</field>
        <field name="res_model">library.menu.category</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo danh mục menu đầu tiên
            </p>
            <p>
                Danh mục menu giúp tổ chức phương tiện theo cấu trúc phân cấp để hiển thị trên website.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_library_menu_category"
              name="Danh mục Menu"
              parent="entro_library.menu_library_config"
              action="action_library_menu_category"
              sequence="30"/>

</odoo>
