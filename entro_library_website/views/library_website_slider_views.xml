<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- list View -->
    <record id="view_library_website_slider_list" model="ir.ui.view">
        <field name="name">library.website.slider.list</field>
        <field name="model">library.website.slider</field>
        <field name="arch" type="xml">
            <list string="Hero Slides">
                <field name="sequence" widget="handle"/>
                <field name="image" widget="image" options="{'size': [100, 100]}"/>
                <field name="name"/>
                <field name="title"/>
                <field name="is_published" widget="boolean_toggle"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_website_slider_form" model="ir.ui.view">
        <field name="name">library.website.slider.form</field>
        <field name="model">library.website.slider</field>
        <field name="arch" type="xml">
            <form string="Hero Slide">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="e.g., Welcome Slide"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="is_published"/>
                        </group>
                        <group>
                            <field name="text_position"/>
                            <field name="overlay_opacity"/>
                            <field name="show_search"/>
                        </group>
                    </group>
                    <group string="Text Content">
                        <field name="title" placeholder="Main heading..."/>
                        <field name="subtitle" placeholder="Subheading or description..."/>
                    </group>
                    <group string="Call-to-Action Button (Optional)">
                        <field name="button_text" placeholder="e.g., Learn More"/>
                        <field name="button_url" placeholder="/thu-vien"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_website_slider" model="ir.actions.act_window">
        <field name="name">Hero Slider</field>
        <field name="res_model">library.website.slider</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Hero Slide
            </p>
            <p>
                Hero slides appear on the library homepage as a slideshow.
                Add images with custom text, buttons, and search functionality.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_library_website_slider"
              name="Hero Slider"
              parent="website.menu_website_global_configuration"
              action="action_library_website_slider"
              sequence="15"/>
</odoo>
