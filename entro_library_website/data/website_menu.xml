<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Delete old menu records first to avoid conflicts -->
    <delete model="website.menu" search="[('name', '=', 'Kho tài nguyên')]"/>
    <delete model="website.menu" search="[('name', '=', 'Sách')]"/>
    <delete model="website.menu" search="[('name', '=', 'Tài liệu số')]"/>
    <delete model="website.menu" search="[('name', '=', 'Đa phương tiện')]"/>

    <!-- ========================================== -->
    <!-- MAIN MENU: Kho tài nguyên with Mega Menu -->
    <!-- ========================================== -->

    <record id="menu_kho_tai_nguyen" model="website.menu">
        <field name="name">Kho tài nguyên</field>
        <field name="url">/kho-tai-nguyen</field>
        <field name="sequence">50</field>
        <field name="mega_menu_content"><![CDATA[
            <section class="s_mega_menu_library_resources py-3">
                <div class="container">
                    <div class="row">
                        <!-- Column 0: All Resources -->
                        <div class="col-lg-4 mb-3">
                            <h5 class="mb-3 pb-2 border-bottom">
                                <a href="/kho-tai-nguyen" class="text-decoration-none text-dark">Tất cả tài nguyên</a>
                            </h5>
                            <nav class="nav flex-column">
                                <a href="/kho-tai-nguyen" class="nav-link py-2">
                                    <i class="fa fa-th me-2"></i>Tất cả
                                </a>
                                <a href="/kho-tai-nguyen?item_type=book" class="nav-link py-2">
                                    <i class="fa fa-book me-2"></i>Tài nguyên sách
                                </a>
                                <a href="/kho-tai-nguyen?item_type=media" class="nav-link py-2">
                                    <i class="fa fa-video-camera me-2"></i>Tài nguyên số
                                </a>
                            </nav>
                        </div>

                        <!-- Column 1: Sách -->
                        <div class="col-lg-4 mb-3">
                            <h5 class="mb-3 pb-2 border-bottom">
                                <a href="/thu-vien" class="text-decoration-none text-dark">Tài nguyên sách</a>
                            </h5>
                            <nav class="nav flex-column">
                                <a href="/thu-vien/phat-hoc" class="nav-link py-2">
                                    <i class="fa fa-angle-right me-2"></i>Khu Phật học
                                </a>
                                <a href="/thu-vien/tong-hop" class="nav-link py-2">
                                    <i class="fa fa-angle-right me-2"></i>Khu tổng hợp
                                </a>
                                <a href="/thu-vien/ngoai-ngu" class="nav-link py-2">
                                    <i class="fa fa-angle-right me-2"></i>Khu ngoại ngữ
                                </a>
                            </nav>
                        </div>

                        <!-- Column 2: Tài liệu số -->
                        <div class="col-lg-4 mb-3">
                            <h5 class="mb-3 pb-2 border-bottom">
                                <a href="/media" class="text-decoration-none text-dark">Tài nguyên số</a>
                            </h5>
                            <div class="row">
                                <div class="col-md-12">
                                    <nav class="nav flex-column">
                                        <div class="nav-item">
                                            <a href="/media/thien-vipassana" class="nav-link py-2 fw-bold">
                                                Thiền Vipassana (dạy bởi G.N.Goenka)
                                            </a>
                                            <a href="/media?media_type=document" class="nav-link py-2 fw-bold">
                                                Tài liệu
                                            </a>
                                            <a href="/media?media_type=video" class="nav-link py-2 fw-bold">
                                                Video
                                            </a>
                                            <a href="/media?media_type=audio" class="nav-link py-2 fw-bold">
                                                Audio
                                            </a>
                                            <a href="/media?media_type=image" class="nav-link py-2 fw-bold">
                                                Hình ảnh
                                            </a>
                                        </div>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        ]]></field>
        <field name="mega_menu_classes">shadow-lg border-top border-primary border-3</field>
    </record>

</odoo>