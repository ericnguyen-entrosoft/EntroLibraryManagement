<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_library_reservation_list" model="ir.ui.view">
        <field name="name">library.reservation.list</field>
        <field name="model">library.reservation</field>
        <field name="arch" type="xml">
            <list string="Danh sách đặt trước">
                <field name="name"/>
                <field name="borrower_id"/>
                <field name="book_id"/>
                <field name="reservation_date"/>
                <field name="expiry_date"/>
                <field name="priority" widget="priority"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'active'"
                       decoration-primary="state == 'available'"
                       decoration-success="state == 'fulfilled'"
                       decoration-muted="state in ('expired', 'cancelled')"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_reservation_form" model="ir.ui.view">
        <field name="name">library.reservation.form</field>
        <field name="model">library.reservation</field>
        <field name="arch" type="xml">
            <form string="Đặt trước sách">
                <header>
                    <button name="action_confirm" string="Xác nhận" type="object"
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_notify_available" string="Thông báo có sẵn" type="object"
                            invisible="state != 'active'" class="oe_highlight"/>
                    <button name="action_fulfill" string="Hoàn thành (Tạo phiếu mượn)" type="object"
                            invisible="state != 'available'" class="oe_highlight"/>
                    <button name="action_cancel" string="Hủy" type="object"
                            invisible="state in ('fulfilled', 'cancelled', 'expired')"/>
                    <button name="action_set_to_draft" string="Chuyển về nháp" type="object"
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,active,available,fulfilled"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="toggle_active" type="object" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="borrower_id" options="{'no_create': True}"/>
                            <field name="borrower_email" readonly="1"/>
                            <field name="borrower_phone" readonly="1"/>
                        </group>
                        <group>
                            <field name="book_id" options="{'no_create': True}"/>
                            <field name="quant_id" options="{'no_create': True}"/>
                            <field name="registration_number" readonly="1"/>
                            <field name="quant_state" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="reservation_date"/>
                            <field name="expiry_date"/>
                            <field name="notification_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="priority" widget="priority"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ghi chú" name="notes">
                            <field name="notes" placeholder="Nhập ghi chú..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_library_reservation_kanban" model="ir.ui.view">
        <field name="name">library.reservation.kanban</field>
        <field name="model">library.reservation</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="borrower_id"/>
                <field name="book_id"/>
                <field name="reservation_date"/>
                <field name="priority"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    <br/>
                                    <span><field name="borrower_id"/></span>
                                </div>
                                <field name="priority" widget="priority"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="book_id"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <i class="fa fa-calendar"/> <field name="reservation_date"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_library_reservation_search" model="ir.ui.view">
        <field name="name">library.reservation.search</field>
        <field name="model">library.reservation</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm đặt trước">
                <field name="name"/>
                <field name="borrower_id"/>
                <field name="book_id"/>
                <separator/>
                <filter string="Nháp" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Đang chờ" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Sách đã sẵn sàng" name="available" domain="[('state', '=', 'available')]"/>
                <separator/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Người đặt" name="group_borrower" context="{'group_by': 'borrower_id'}"/>
                    <filter string="Sách" name="group_book" context="{'group_by': 'book_id'}"/>
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_reservation" model="ir.actions.act_window">
        <field name="name">Đặt trước sách</field>
        <field name="res_model">library.reservation</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="search_view_id" ref="view_library_reservation_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo đặt trước mới
            </p>
            <p>
                Nhấn vào nút "Tạo" để đặt trước sách.
            </p>
        </field>
    </record>
</odoo>
