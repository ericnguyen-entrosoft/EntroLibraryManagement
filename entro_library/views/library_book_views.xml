<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Kanban View -->
    <record id="view_library_book_kanban" model="ir.ui.view">
        <field name="name">library.book.kanban</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <kanban sample="1">
                <field name="id" />
                <field name="name" />
                <field name="author_ids" />
                <field name="publisher_id" />
                <field name="publication_year" />
                <field name="quant_count" />
                <field name="available_quant_count" />
                <field name="total_reservation_count" />
                <field name="category_id" />
                <field name="borrow_location_ids" />
                <field name="activity_state" />
                <progressbar field="activity_state"
                    colors='{"planned": "success", "today": "warning", "overdue": "danger"}' />
                <templates>
                    <t t-name="card" class="flex-row">
                        <main class="pe-2">
                            <div class="mb-1">
                                <div class="d-flex mb-0 h5">
                                    <field name="name" />
                                </div>
                                <span t-if="record.author_ids.raw_value.length" class="text-muted">
                                    <field name="author_ids" widget="many2many_tags" />
                                </span>
                            </div>
                            <div class="text-muted small mb-2">
                                <t t-if="record.publisher_id.raw_value">
                                    <i class="fa fa-building-o" />
                                    <field name="publisher_id" />
                                </t>
                                <t t-if="record.publication_year.raw_value"> (<field
                                        name="publication_year" />) </t>
                            </div>
                            <div class="mb-2">
                                <div> Sẵn sàng: <strong>
                                        <field name="available_quant_count" />
                                    </strong>
                                </div>
                                <t t-if="record.total_reservation_count.raw_value > 0">
                                    <div> Đặt trước: <strong>
                                            <field name="total_reservation_count" />
                                        </strong>
                                    </div>
                                </t>
                            </div>
                            <t t-if="record.borrow_location_ids.raw_value.length">
                                <div class="mb-2">
                                    <div class="text-muted small">
                                        <i class="fa fa-map-marker text-primary"/> Khu vực:
                                    </div>
                                    <div>
                                        <field name="borrow_location_ids" widget="many2many_tags"/>
                                    </div>
                                </div>
                            </t>
                        </main>
                        <aside>
                            <field
                                name="image_128"
                                widget="image"
                                alt="Book"
                                options="{'img_class': 'w-100 object-fit-contain'}"
                                invisible="not image_128"
                            />
                        </aside>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- List View -->
    <record id="view_library_book_list" model="ir.ui.view">
        <field name="name">library.book.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list string="Danh sách sách">
                <field name="name" />
                <field name="author_ids" widget="many2many_tags" />
                <field name="publisher_id" />
                <field name="publication_year" />
                <field name="language_id" />
                <field name="quant_count" />
                <field name="available_quant_count" />
                <field name="registration_date" />
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Thông tin sách">
                <header>
                    <button name="action_update_quantity" type="object"
                        class="oe_stat_button"
                        string="Cập nhật số lượng"
                        groups="base.group_user" />
                </header>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"
                        options="{'preview_image': 'image_128', 'size': [90, 90]}" />
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_quants" type="object"
                            class="oe_stat_button" icon="fa-cubes">
                            <field name="quant_count" widget="statinfo" string="Số lượng" />
                        </button>
                        <button name="action_view_borrowings" type="object"
                            class="oe_stat_button" icon="fa-history" string="Lịch sử mượn">
                        </button>
                        <button name="action_view_reservations" type="object"
                            class="oe_stat_button" icon="fa-bookmark">
                            <field name="total_reservation_count" widget="statinfo"
                                string="Đặt trước" />
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" string="Tác phẩm" />
                        <h1>
                            <field name="name" placeholder="Nhập tên tác phẩm..." />
                        </h1>
                    </div>
                    <div name="options">
                        <span class="d-inline-flex">
                            <field name="can_borrow" />
                            <label for="can_borrow"/>
                        </span>
                    </div>
                    <notebook>
                        <page string="Thông tin sách" name="general">
                            <group>
                                <group name="basic_info" string="Thông tin cơ bản">
                                    <field name="subtitle" />
                                    <field name="parallel_title" />
                                    <field name="volume_title" />
                                    <field name="category_id" options="{'no_create_edit': False}" />
                                    <field name="media_link" />
                                </group>
                                <group name="registration_info" string="Thông tin đăng ký">
                                    <field name="registration_date" />
                                    <field name="ddc_number" />
                                    <field name="series_id" options="{'no_create_edit': False}" />
                                    <field name="cutter_number" readonly="1" />
                                    <field name="keywords"
                                        placeholder="Nhập từ khóa, phân cách bằng dấu phẩy..." />
                                </group>
                            </group>

                            <group>
                                <group name="author_info" string="Thông tin tác giả">
                                    <field name="author_ids" widget="many2many_tags"
                                        options="{'no_create_edit': False}" />
                                    <field name="co_author_ids" widget="many2many_tags"
                                        options="{'no_create_edit': False}" />
                                </group>
                                <group name="publication_info" string="Thông tin xuất bản">
                                    <field name="publisher_id" options="{'no_create_edit': False}" />
                                    <field name="publication_country_id"
                                        options="{'no_create_edit': False}" />
                                    <field name="publication_city_id"
                                        options="{'no_create_edit': False}"
                                        domain="[('country_id', '=', publication_country_id)]" />
                                    <field name="publication_year" required="1" />
                                    <field name="language_id" options="{'no_create_edit': False}"
                                        required="1" />
                                    <field name="page_count" required="1" />
                                    <field name="length" required="1" />
                                    <field name="reprint_count" required="0" />
                                </group>
                            </group>
                            <group string="Tóm tắt nội dung">
                                <field name="summary" placeholder="Nhập tóm tắt nội dung..." nolabel="1" />
                            </group>
                        </page>
                        <page string="Hình ảnh" name="images">
                            <field name="book_image_ids" mode="kanban">
                                <kanban string="Book Images" default_order="sequence">
                                    <field name="video_url" invisible="1" />
                                    <field name="sequence" widget="handle" />
                                    <templates>
                                        <t t-name="card" class="p-0 border-0">
                                            <div class="card">
                                                <div class="o_squared_image">
                                                    <field class="card-img-top" name="image_1920"
                                                        widget="x2_many_image" />
                                                </div>
                                                <div class="p-2 m-0 bg-200"
                                                    t-attf-title="#{record.name.value}">
                                                    <field name="name"
                                                        class="small fs-5 text-truncate d-block" />
                                                </div>
                                                <!-- below 100 Kb: good -->
                                                <t
                                                    t-if="record.image_1920.raw_value.length &lt; 100*1000">
                                                    <t t-set="size_status"
                                                        t-value="'text-bg-success'" />
                                                    <t t-set="message">Acceptable file size</t>
                                                </t>
                                                <!-- below 1000 Kb: decent -->
                                                <t
                                                    t-elif="record.image_1920.raw_value.length &lt; 1000*1000">
                                                    <t t-set="size_status"
                                                        t-value="'text-bg-warning'" />
                                                    <t t-set="message">Huge file size. The image
                                                        should be optimized/reduced.</t>
                                                </t>
                                                <!-- above 1000 Kb: bad -->
                                                <t t-else="1">
                                                    <t t-set="size_status"
                                                        t-value="'text-bg-danger'" />
                                                    <t t-set="message">Optimization required! Reduce
                                                        the image size or increase your compression
                                                        settings.</t>
                                                </t>
                                                <span
                                                    t-attf-class="badge #{size_status} o_product_image_size"
                                                    t-att-title="message"></span>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Ghi chú" name="notes">
                            <field name="note" placeholder="Nhập ghi chú..." />
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_library_book_search" model="ir.ui.view">
        <field name="name">library.book.search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm sách">
                <field name="name" string="Tên sách"
                    filter_domain="['|', '|', ('keywords', 'ilike', self), ('name', 'ilike', self), ('subtitle', 'ilike', self)]" />
                <field name="author_ids" />
                <field name="publisher_id" />
                <field name="keywords" />
                <field name="ddc_number" />
                <separator />
                <filter string="Hoạt động" name="active" domain="[('active', '=', True)]" />
                <filter string="Đã lưu trữ" name="inactive" domain="[('active', '=', False)]" />
                <separator />
                <group expand="0" string="Nhóm theo">
                    <filter string="Nhà xuất bản" name="group_publisher"
                        context="{'group_by': 'publisher_id'}" />
                    <filter string="Ngôn ngữ" name="group_language"
                        context="{'group_by': 'language_id'}" />
                    <filter string="Năm xuất bản" name="group_year"
                        context="{'group_by': 'publication_year'}" />
                    <filter string="Tùng thư" name="group_series"
                        context="{'group_by': 'series_id'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Sách</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_library_book_search" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo sách mới
            </p>
            <p>
                Nhấn vào nút "Tạo" để thêm sách mới vào thư viện.
            </p>
        </field>
    </record>
</odoo>