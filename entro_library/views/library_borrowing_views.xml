<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_library_borrowing_list" model="ir.ui.view">
        <field name="name">library.borrowing.list</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <list string="Danh sách mượn sách" decoration-danger="state == 'overdue'" decoration-success="state == 'returned'">
                <field name="name"/>
                <field name="borrower_id"/>
                <field name="book_count" string="Số sách"/>
                <field name="borrow_date"/>
                <field name="return_date"/>
                <field name="late_days" optional="show"/>
                <field name="fine_amount" widget="monetary" optional="show"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-primary="state == 'borrowed'"
                       decoration-success="state == 'returned'"
                       decoration-danger="state == 'overdue'"
                       decoration-warning="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_borrowing_form" model="ir.ui.view">
        <field name="name">library.borrowing.form</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <form string="Phiếu mượn sách">
                <header>
                    <button name="action_confirm" string="Xác nhận mượn" type="object"
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_return" string="Trả sách" type="object"
                            invisible="state not in ('borrowed', 'overdue')" class="oe_highlight"/>
                    <button name="action_mark_lost" string="Đánh dấu mất" type="object"
                            invisible="state not in ('borrowed', 'overdue')"
                            confirm="Bạn có chắc chắn đánh dấu sách này là mất?"/>
                    <button name="action_cancel" string="Hủy" type="object"
                            invisible="state in ('returned', 'cancelled', 'lost')"/>
                    <button name="action_set_to_draft" string="Chuyển về nháp" type="object"
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,borrowed,returned"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Thông tin độc giả">
                            <field name="borrower_id" options="{'no_create': True}" readonly="state != 'draft'"/>
                            <field name="borrower_email" readonly="1"/>
                            <field name="borrower_phone" readonly="1"/>
                        </group>
                        <group string="Thông tin mượn">
                            <field name="borrow_date" readonly="state != 'draft'"/>
                            <field name="librarian_id" readonly="state != 'draft'"/>
                            <field name="book_count" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi tiết" name="books">
                            <field name="borrowing_line_ids" readonly="state != 'draft'">
                                <list editable="bottom" decoration-danger="is_overdue == True" decoration-success="state == 'returned'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="book_id" options="{'no_create': True}"/>
                                    <field name="available_quant_ids" column_invisible="1"/>
                                    <field name="quant_id" options="{'no_create': True}" string="Số ĐKCB"/>
                                    <field name="quant_location" readonly="1" optional="show"/>
                                    <field name="due_date"/>
                                    <field name="return_date" readonly="1" optional="hide"/>
                                    <field name="late_days" readonly="1" optional="hide"/>
                                    <field name="fine_amount" widget="monetary" readonly="1" optional="hide"/>
                                    <field name="is_overdue" column_invisible="1" optional="hide"/>
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'draft'"
                                           decoration-primary="state == 'borrowed'"
                                           decoration-success="state == 'returned'"
                                           decoration-danger="state == 'overdue'"
                                           decoration-warning="state == 'cancelled'" />
                                    <button name="action_return" string="Trả sách" type="object"
                                            icon="fa-check"
                                            invisible="state not in ('borrowed', 'overdue')"/>
                                    <button name="action_mark_lost" string="Đánh dấu mất" type="object"
                                            icon="fa-exclamation-triangle"
                                            invisible="state not in ('borrowed', 'overdue')"
                                            confirm="Bạn có chắc chắn đánh dấu sách này là mất?"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="is_overdue" invisible="1"/>
                                <field name="late_days" readonly="1"/>
                                <field name="fine_amount" widget="monetary" readonly="1" class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        <page string="Ghi chú" name="notes">
                            <field name="notes" placeholder="Nhập ghi chú..." readonly="state not in ('draft', 'borrowed', 'overdue')"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_library_borrowing_calendar" model="ir.ui.view">
        <field name="name">library.borrowing.calendar</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <calendar string="Lịch mượn trả" date_start="borrow_date" date_stop="return_date"
                      color="state" mode="month" quick_create="0">
                <field name="borrower_id"/>
                <field name="book_count"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_library_borrowing_kanban" model="ir.ui.view">
        <field name="name">library.borrowing.kanban</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="borrower_id"/>
                <field name="book_count"/>
                <field name="borrow_date"/>
                <field name="state"/>
                <field name="is_overdue"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    <br/>
                                    <span><field name="borrower_id"/></span>
                                </div>
                                <field name="state" widget="label_selection"
                                       options="{'classes': {'draft': 'default', 'borrowed': 'info', 'returned': 'success', 'overdue': 'danger'}}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <i class="fa fa-book"/> <field name="book_count"/> sách
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <i class="fa fa-calendar"/> <field name="borrow_date"/>
                                </div>
                                <div class="oe_kanban_bottom_right" t-if="record.is_overdue.raw_value">
                                    <span class="badge badge-danger">Quá hạn</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_library_borrowing_search" model="ir.ui.view">
        <field name="name">library.borrowing.search</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm phiếu mượn">
                <field name="name"/>
                <field name="borrower_id"/>
                <field name="borrowing_line_ids" string="Sách" filter_domain="[('borrowing_line_ids.book_id.name', 'ilike', self)]"/>
                <separator/>
                <filter string="Nháp" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Đang mượn" name="borrowed" domain="[('state', '=', 'borrowed')]"/>
                <filter string="Quá hạn" name="overdue" domain="[('state', '=', 'overdue')]"/>
                <filter string="Đã trả" name="returned" domain="[('state', '=', 'returned')]"/>
                <separator/>
                <filter string="Hôm nay" name="today" domain="[('borrow_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Tuần này" name="this_week" domain="[('borrow_date', '&gt;=', (context_today()-relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Tháng này" name="this_month" domain="[('borrow_date', '&gt;=', (context_today()-relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Người mượn" name="group_borrower" context="{'group_by': 'borrower_id'}"/>
                    <filter string="Sách" name="group_book" context="{'group_by': 'book_id'}"/>
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Ngày mượn" name="group_borrow_date" context="{'group_by': 'borrow_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_borrowing" model="ir.actions.act_window">
        <field name="name">Mượn/Trả sách</field>
        <field name="res_model">library.borrowing</field>
        <field name="view_mode">list,form,calendar,kanban</field>
        <field name="search_view_id" ref="view_library_borrowing_search"/>
        <field name="context">{'search_default_borrowed': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo phiếu mượn sách mới
            </p>
            <p>
                Nhấn vào nút "Tạo" để tạo phiếu mượn sách mới.
            </p>
        </field>
    </record>

    <!-- Overdue Action -->
    <record id="action_library_borrowing_overdue" model="ir.actions.act_window">
        <field name="name">Sách quá hạn</field>
        <field name="res_model">library.borrowing</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', '=', 'overdue')]</field>
        <field name="context">{'create': False}</field>
    </record>

    <!-- Borrowing Line List View (for Reports) -->
    <record id="view_library_borrowing_line_report_list" model="ir.ui.view">
        <field name="name">library.borrowing.line.report.list</field>
        <field name="model">library.borrowing.line</field>
        <field name="arch" type="xml">
            <list string="Chi tiết mượn/trả" create="false" edit="false" delete="false"
                  decoration-danger="state == 'overdue'" decoration-success="state == 'returned'">
                <field name="borrowing_id" string="Phiếu mượn"/>
                <field name="borrower_id"/>
                <field name="borrow_date"/>
                <field name="quant_id"/>
                <field name="registration_number"/>
                <field name="book_id"/>
                <field name="book_name" optional="hide"/>
                <field name="quant_location" optional="show"/>
                <field name="due_date"/>
                <field name="return_date" optional="show"/>
                <field name="late_days" optional="show"/>
                <field name="fine_amount" widget="monetary" optional="show"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-primary="state == 'borrowed'"
                       decoration-success="state == 'returned'"
                       decoration-danger="state == 'overdue'"
                       decoration-warning="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Borrowing Line Search View (for Reports) -->
    <record id="view_library_borrowing_line_report_search" model="ir.ui.view">
        <field name="name">library.borrowing.line.report.search</field>
        <field name="model">library.borrowing.line</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm chi tiết mượn/trả">
                <field name="borrowing_id"/>
                <field name="borrower_id"/>
                <field name="book_id"/>
                <field name="quant_id"/>
                <field name="registration_number"/>
                <separator/>
                <filter string="Đang mượn" name="borrowed" domain="[('state', '=', 'borrowed')]"/>
                <filter string="Quá hạn" name="overdue" domain="[('state', '=', 'overdue')]"/>
                <filter string="Đã trả" name="returned" domain="[('state', '=', 'returned')]"/>
                <separator/>
                <filter string="Hôm nay" name="today" domain="[('borrow_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Tuần này" name="this_week" domain="[('borrow_date', '&gt;=', (context_today()-relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Tháng này" name="this_month" domain="[('borrow_date', '&gt;=', (context_today()-relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Phiếu mượn" name="group_borrowing" context="{'group_by': 'borrowing_id'}"/>
                    <filter string="Người mượn" name="group_borrower" context="{'group_by': 'borrower_id'}"/>
                    <filter string="Sách" name="group_book" context="{'group_by': 'book_id'}"/>
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Borrowing Line Report Action -->
    <record id="action_library_borrowing_line_report" model="ir.actions.act_window">
        <field name="name">Chi tiết mượn/trả</field>
        <field name="res_model">library.borrowing.line</field>
        <field name="view_mode">list</field>
        <field name="search_view_id" ref="view_library_borrowing_line_report_search"/>
        <field name="view_id" ref="view_library_borrowing_line_report_list"/>
        <field name="context">{'create': False, 'edit': False, 'delete': False}</field>
    </record>
</odoo>
