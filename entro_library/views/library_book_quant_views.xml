<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_library_book_quant_list" model="ir.ui.view">
        <field name="name">library.book.quant.list</field>
        <field name="model">library.book.quant</field>
        <field name="arch" type="xml">
            <list string="Danh sách bản sao sách">
                <field name="registration_number"/>
                <field name="book_id"/>
                <field name="location_id"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'available'"
                       decoration-warning="state in ('borrowed', 'reserved')"
                       decoration-danger="state in ('lost', 'damaged')"/>
                <field name="times_borrowed"/>
                <field name="current_reservation_count"/>
                <field name="current_borrower_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_book_quant_form" model="ir.ui.view">
        <field name="name">library.book.quant.form</field>
        <field name="model">library.book.quant</field>
        <field name="arch" type="xml">
            <form string="Bản sao sách">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="available,borrowed,reserved,maintenance"/>
                </header>
                <sheet>
                    <div class="oe_ribbon oe_ribbon_topright" invisible="state == 'available'">
                        <span class="text-bg-success" invisible="state != 'reserved'">Đã đặt trước</span>
                        <span class="text-bg-warning" invisible="state != 'borrowed'">Đang mượn</span>
                        <span class="text-bg-info" invisible="state != 'maintenance'">Bảo trì</span>
                        <span class="text-bg-danger" invisible="state != 'lost'">Mất</span>
                        <span class="text-bg-danger" invisible="state != 'damaged'">Hư hỏng</span>
                    </div>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_borrowings" type="object"
                                class="oe_stat_button" icon="fa-history">
                            <field name="times_borrowed" widget="statinfo" string="Lần mượn"/>
                        </button>
                        <button name="action_view_reservations" type="object"
                                class="oe_stat_button" icon="fa-bookmark">
                            <field name="current_reservation_count" widget="statinfo" string="Đặt trước"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="registration_number" string="Số ĐKCB"/>
                        <h1>
                            <field name="registration_number" placeholder="Nhập số đăng ký cá biệt..."/>
                        </h1>
                    </div>
                    <group>
                        <group name="book_info" string="Thông tin sách">
                            <field name="book_id" options="{'no_create': True}"/>
                        </group>
                        <group name="location_info" string="Vị trí &amp; Trạng thái">
                            <field name="location_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group name="borrowing_info" string="Thông tin mượn" invisible="state != 'borrowed'">
                        <field name="current_borrowing_id"/>
                        <field name="current_borrower_id"/>
                    </group>
                    <group name="statistics" string="Thống kê">
                        <field name="times_borrowed"/>
                        <field name="current_reservation_count"/>
                    </group>
                    <notebook>
                        <page string="Lịch sử mượn" name="borrowing_history">
                            <field name="borrowing_line_ids">
                                <list string="Lịch sử mượn" editable="bottom">
                                    <field name="borrowing_id"/>
                                    <field name="due_date"/>
                                    <field name="return_date"/>
                                    <field name="state"/>
                                    <field name="late_days"/>
                                </list>
                            </field>
                        </page>
                        <page string="Đặt trước" name="reservations">
                            <field name="reservation_ids">
                                <list string="Đặt trước">
                                    <field name="name"/>
                                    <field name="borrower_id"/>
                                    <field name="reservation_date"/>
                                    <field name="expiry_date"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Ghi chú" name="notes">
                            <field name="note" placeholder="Ghi chú về bản sao này..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_library_book_quant_kanban" model="ir.ui.view">
        <field name="name">library.book.quant.kanban</field>
        <field name="model">library.book.quant</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="registration_number"/>
                <field name="book_id"/>
                <field name="state"/>
                <field name="location_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="row mb4">
                                <div class="col-12">
                                    <strong><field name="registration_number"/></strong>
                                    <span class="float-end badge" t-att-class="{'text-bg-success': record.state.raw_value == 'available', 'text-bg-warning': ['borrowed', 'reserved'].includes(record.state.raw_value), 'text-bg-danger': ['lost', 'damaged'].includes(record.state.raw_value)}">
                                        <field name="state"/>
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <field name="book_id"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 text-muted">
                                    <i class="fa fa-map-marker"/> <field name="location_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_library_book_quant_search" model="ir.ui.view">
        <field name="name">library.book.quant.search</field>
        <field name="model">library.book.quant</field>
        <field name="arch" type="xml">
            <search string="Tìm bản sao sách">
                <field name="registration_number"/>
                <field name="book_id"/>
                <field name="location_id"/>
                <filter string="Có sẵn" name="available" domain="[('state', '=', 'available')]"/>
                <filter string="Đang mượn" name="borrowed" domain="[('state', '=', 'borrowed')]"/>
                <filter string="Đã đặt trước" name="reserved" domain="[('state', '=', 'reserved')]"/>
                <filter string="Bảo trì" name="maintenance" domain="[('state', '=', 'maintenance')]"/>
                <separator/>
                <filter string="Mất/Hư hỏng" name="lost_damaged" domain="[('state', 'in', ['lost', 'damaged'])]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Sách" name="group_book" context="{'group_by': 'book_id'}"/>
                    <filter string="Vị trí" name="group_location" context="{'group_by': 'location_id'}"/>
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_book_quant" model="ir.actions.act_window">
        <field name="name">Bản sao sách</field>
        <field name="res_model">library.book.quant</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_available': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo bản sao sách mới
            </p>
            <p>
                Quản lý các bản sao vật lý của sách. Mỗi bản sao có số ĐKCB riêng.
            </p>
        </field>
    </record>

    <!-- Action: Print Book Labels -->
    <record id="action_print_book_labels" model="ir.actions.server">
        <field name="name">In nhãn sách</field>
        <field name="model_id" ref="model_library_book_quant"/>
        <field name="binding_model_id" ref="model_library_book_quant"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
action = env['library.book.label.wizard'].with_context(active_ids=records.ids).create({}).action_open_wizard()
        </field>
    </record>
</odoo>
