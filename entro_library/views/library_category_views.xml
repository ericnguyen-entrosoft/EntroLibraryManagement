<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_library_category_list" model="ir.ui.view">
        <field name="name">library.category.list</field>
        <field name="model">library.category</field>
        <field name="arch" type="xml">
            <list string="Danh sách danh mục">
                <field name="code"/>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="book_count"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_category_form" model="ir.ui.view">
        <field name="name">library.category.form</field>
        <field name="model">library.category</field>
        <field name="arch" type="xml">
            <form string="Danh mục sách">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="toggle_active" type="object" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="parent_id"/>
                            <field name="book_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Mô tả" name="description">
                            <field name="description" placeholder="Nhập mô tả danh mục..."/>
                        </page>
                        <page string="Danh mục con" name="children">
                            <field name="child_ids" nolabel="1">
                                <list string="Danh mục con">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="book_count"/>
                                </list>
                            </field>
                        </page>
                        <page string="Sách" name="books">
                            <field name="book_ids" nolabel="1">
                                <list string="Sách trong danh mục">
                                    <field name="name"/>
                                    <field name="author_ids" widget="many2many_tags"/>
                                    <field name="publisher_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_category" model="ir.actions.act_window">
        <field name="name">Danh mục</field>
        <field name="res_model">library.category</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo danh mục mới
            </p>
            <p>
                Nhấn vào nút "Tạo" để thêm danh mục mới.
            </p>
        </field>
    </record>
</odoo>
