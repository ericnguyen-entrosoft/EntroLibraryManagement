<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_library_series_list" model="ir.ui.view">
        <field name="name">library.series.list</field>
        <field name="model">library.series</field>
        <field name="arch" type="xml">
            <list string="Danh sách tùng thư">
                <field name="code"/>
                <field name="name"/>
                <field name="publisher_id"/>
                <field name="book_count"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_series_form" model="ir.ui.view">
        <field name="name">library.series.form</field>
        <field name="model">library.series</field>
        <field name="arch" type="xml">
            <form string="Tùng thư">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="toggle_active" type="object" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="publisher_id"/>
                            <field name="book_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Mô tả" name="description">
                            <field name="description" placeholder="Nhập mô tả tùng thư..."/>
                        </page>
                        <page string="Sách trong tùng thư" name="books">
                            <field name="book_ids" nolabel="1">
                                <list string="Sách">
                                    <field name="name"/>
                                    <field name="author_ids" widget="many2many_tags"/>
                                    <field name="publication_year"/>
                                </list>
                            </field>
                        </page>
                        <page string="Ghi chú" name="notes">
                            <field name="note" placeholder="Nhập ghi chú..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_series" model="ir.actions.act_window">
        <field name="name">Tùng thư</field>
        <field name="res_model">library.series</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo tùng thư mới
            </p>
            <p>
                Nhấn vào nút "Tạo" để thêm tùng thư mới.
            </p>
        </field>
    </record>
</odoo>
