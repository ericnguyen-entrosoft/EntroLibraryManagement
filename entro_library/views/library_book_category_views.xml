<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Library Book Category List View -->
    <record id="view_library_book_category_list" model="ir.ui.view">
        <field name="name">library.book.category.list</field>
        <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <list string="Nhóm tài nguyên sách" default_order="sequence,name">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="complete_name"/>
                <field name="parent_id"/>
                <field name="website_menu_type"/>
                <field name="is_website_menu" widget="boolean_toggle"/>
                <field name="access_level"/>
                <field name="book_count"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Library Book Category Form View -->
    <record id="view_library_book_category_form" model="ir.ui.view">
        <field name="name">library.book.category.form</field>
        <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <form string="Nhóm tài nguyên sách">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_books" type="object"
                                class="oe_stat_button" icon="fa-book"
                                invisible="book_count == 0">
                            <field name="book_count" widget="statinfo" string="Sách"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                            invisible="active"/>
                    <group>
                        <group string="Thông tin cơ bản">
                            <field name="name"/>
                            <field name="slug" placeholder="phat-hoc"/>
                            <field name="parent_id"/>
                            <field name="sequence"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group string="Hiển thị">
                            <field name="color" widget="color_picker"/>
                            <field name="icon" placeholder="fa-book"/>
                        </group>
                    </group>
                    <group>
                        <group string="Website">
                            <field name="is_website_menu" widget="boolean_toggle"/>
                            <field name="website_menu_type" readonly="1"/>
                        </group>
                        <group string="Kiểm soát truy cập">
                            <field name="access_level" widget="radio"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Mô tả" name="description">
                            <field name="description" placeholder="Mô tả danh mục..."/>
                        </page>
                        <page string="Danh mục con" name="children">
                            <field name="child_ids">
                                <list>
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="slug"/>
                                    <field name="is_website_menu" widget="boolean_toggle"/>
                                    <field name="access_level"/>
                                    <field name="book_count"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Library Book Category Search View -->
    <record id="view_library_book_category_search" model="ir.ui.view">
        <field name="name">library.book.category.search</field>
        <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm danh mục">
                <field name="name" string="Tên danh mục"
                       filter_domain="['|', ('name','ilike',self), ('complete_name','ilike',self)]"/>
                <field name="slug"/>
                <field name="parent_id"/>
                <separator/>
                <filter string="Hoạt động" name="active" domain="[('active','=',True)]"/>
                <filter string="Đã lưu trữ" name="inactive" domain="[('active','=',False)]"/>
                <separator/>
                <filter string="Hiển thị trên Website" name="website_menu" domain="[('is_website_menu','=',True)]"/>
                <filter string="Menu chính" name="main_menu" domain="[('website_menu_type','=','main')]"/>
                <filter string="Menu con" name="sub_menu" domain="[('website_menu_type','=','sub')]"/>
                <separator/>
                <filter string="Công khai" name="public" domain="[('access_level','=','public')]"/>
                <filter string="Thành viên" name="members" domain="[('access_level','=','members')]"/>
                <filter string="Hạn chế" name="restricted" domain="[('access_level','=','restricted')]"/>
                <separator/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Danh mục cha" name="group_parent" context="{'group_by':'parent_id'}"/>
                    <filter string="Loại menu" name="group_menu_type" context="{'group_by':'website_menu_type'}"/>
                    <filter string="Mức độ truy cập" name="group_access" context="{'group_by':'access_level'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Library Book Category Action -->
    <record id="action_library_book_category" model="ir.actions.act_window">
        <field name="name">Nhóm tài nguyên sách</field>
        <field name="res_model">library.book.category</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_library_book_category_search"/>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_library_book_category"
              name="Nhóm tài nguyên sách"
              parent="menu_library_config"
              action="action_library_book_category"
              sequence="5"/>

</odoo>
