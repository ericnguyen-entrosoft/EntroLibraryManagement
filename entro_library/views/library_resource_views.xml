<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Library Resource List View -->
    <record id="view_library_resource_list" model="ir.ui.view">
        <field name="name">library.resource.list</field>
        <field name="model">library.resource</field>
        <field name="arch" type="xml">
            <list string="Kho tài nguyên thư viện" default_order="sequence,name">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="book_count"/>
                <field name="available_book_count"/>
                <field name="borrowed_book_count"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Library Resource Form View -->
    <record id="view_library_resource_form" model="ir.ui.view">
        <field name="name">library.resource.form</field>
        <field name="model">library.resource</field>
        <field name="arch" type="xml">
            <form string="Kho tài nguyên thư viện">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_books" type="object"
                                class="oe_stat_button" icon="fa-book">
                            <field name="book_count" widget="statinfo" string="Sách"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                            invisible="active"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="icon"/>
                            <field name="color" widget="color_picker"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chính sách" name="policy">
                            <field name="policy" widget="html"/>
                        </page>
                        <page string="Mô tả" name="description">
                            <field name="description" widget="html"/>
                        </page>
                        <page string="Sách" name="books">
                            <field name="book_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="author_ids" widget="many2many_tags"/>
                                    <field name="category_id"/>
                                    <field name="available_quant_count"/>
                                    <field name="borrowed_quant_count"/>
                                </list>
                            </field>
                        </page>
                        <page string="Thống kê" name="statistics">
                            <group>
                                <group string="Số lượng sách">
                                    <field name="book_count"/>
                                    <field name="available_book_count"/>
                                    <field name="borrowed_book_count"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Library Resource Kanban View -->
    <record id="view_library_resource_kanban" model="ir.ui.view">
        <field name="name">library.resource.kanban</field>
        <field name="model">library.resource</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_order="sequence,name">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="color"/>
                <field name="icon"/>
                <field name="book_count"/>
                <field name="available_book_count"/>
                <field name="borrowed_book_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <i t-attf-class="fa #{record.icon.raw_value} me-2"/>
                                        <strong><field name="name"/></strong>
                                    </div>
                                    <div class="o_secondary">
                                        <small><field name="code"/></small>
                                    </div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content mt-3">
                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-primary btn-sm" type="object" name="action_view_books">
                                            <i class="fa fa-book"/> <field name="book_count"/> Sách
                                        </button>
                                    </div>
                                    <div class="col-6 text-end">
                                        <span class="badge text-bg-success">
                                            <i class="fa fa-check"/> <field name="available_book_count"/>
                                        </span>
                                        <span class="badge text-bg-warning">
                                            <i class="fa fa-clock-o"/> <field name="borrowed_book_count"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Library Resource Search View -->
    <record id="view_library_resource_search" model="ir.ui.view">
        <field name="name">library.resource.search</field>
        <field name="model">library.resource</field>
        <field name="arch" type="xml">
            <search string="Kho tài nguyên thư viện">
                <field name="name" string="Tên hoặc Mã"
                       filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]"/>
                <field name="code"/>
                <separator/>
                <filter string="Hoạt động" name="active" domain="[('active','=',True)]"/>
                <filter string="Đã lưu trữ" name="inactive" domain="[('active','=',False)]"/>
                <separator/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Hoạt động" name="group_active" context="{'group_by':'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Library Resource Action -->
    <record id="action_library_resource" model="ir.actions.act_window">
        <field name="name">Kho tài nguyên thư viện</field>
        <field name="res_model">library.resource</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_library_resource_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo kho tài nguyên thư viện đầu tiên
            </p>
            <p>
                Kho tài nguyên thư viện cho phép bạn tổ chức và nhóm các sách theo mục đích sử dụng.
            </p>
        </field>
    </record>

