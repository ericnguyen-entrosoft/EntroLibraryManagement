<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Library Resource List View -->
    <record id="view_library_resource_list" model="ir.ui.view">
        <field name="name">library.resource.list</field>
        <field name="model">library.resource</field>
        <field name="arch" type="xml">
            <list string="Kho tài nguyên thư viện" default_order="sequence,name">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="book_count"/>
                <field name="available_book_count"/>
                <field name="borrowed_book_count"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Library Resource Form View -->
    <record id="view_library_resource_form" model="ir.ui.view">
        <field name="name">library.resource.form</field>
        <field name="model">library.resource</field>
        <field name="arch" type="xml">
            <form string="Kho tài nguyên thư viện">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_books" type="object"
                                class="oe_stat_button" icon="fa-book">
                            <field name="book_count" widget="statinfo" string="Sách"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                            invisible="active"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="icon"/>
                            <field name="color"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <group string="Chính sách mượn sách">
                        <group>
                            <field name="allow_borrowing" widget="boolean_toggle"/>
                            <field name="max_books_per_borrower"
                                   invisible="allow_borrowing == False"/>
                        </group>
                        <group>
                            <field name="default_borrowing_days"
                                   invisible="allow_borrowing == False"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Mô tả" name="description">
                            <field name="description" widget="html"/>
                        </page>
                        <page string="Nội quy" name="policy">
                            <field name="policy" widget="html"/>
                        </page>
                        <page string="Sách" name="books">
                            <field name="book_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="author_ids" widget="many2many_tags"/>
                                    <field name="category_id"/>
                                    <field name="available_quant_count"/>
                                    <field name="borrowed_quant_count"/>
                                </list>
                            </field>
                        </page>
                        <page string="Thống kê" name="statistics">
                            <group>
                                <group string="Số lượng sách">
                                    <field name="book_count"/>
                                    <field name="available_book_count"/>
                                    <field name="borrowed_book_count"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Library Resource Search View -->
    <record id="view_library_resource_search" model="ir.ui.view">
        <field name="name">library.resource.search</field>
        <field name="model">library.resource</field>
        <field name="arch" type="xml">
            <search string="Kho tài nguyên thư viện">
                <field name="name" string="Tên hoặc Mã"
                       filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]"/>
                <field name="code"/>
                <separator/>
                <filter string="Hoạt động" name="active" domain="[('active','=',True)]"/>
                <filter string="Đã lưu trữ" name="inactive" domain="[('active','=',False)]"/>
                <separator/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Hoạt động" name="group_active" context="{'group_by':'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Library Resource Action -->
    <record id="action_library_resource" model="ir.actions.act_window">
        <field name="name">Kho tài nguyên thư viện</field>
        <field name="res_model">library.resource</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_library_resource_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo kho tài nguyên thư viện đầu tiên
            </p>
            <p>
                Kho tài nguyên thư viện cho phép bạn tổ chức và nhóm các sách theo mục đích sử dụng.
            </p>
        </field>
    </record>
</odoo>
