<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Media Vipassana Category List View -->
    <record id="view_media_vipassana_category_list" model="ir.ui.view">
        <field name="name">media.vipassana.category.list</field>
        <field name="model">media.vipassana.category</field>
        <field name="arch" type="xml">
            <list string="Danh mục Thiền Vipassana" default_order="sequence,name" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description"/>
                <field name="media_count"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Media Vipassana Category Kanban View -->
    <record id="view_media_vipassana_category_kanban" model="ir.ui.view">
        <field name="name">media.vipassana.category.kanban</field>
        <field name="model">media.vipassana.category</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_order="sequence,name">
                <field name="id"/>
                <field name="name"/>
                <field name="color"/>
                <field name="media_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong><field name="name"/></strong>
                                    </div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content mt-3">
                                <div class="row">
                                    <div class="col-12">
                                        <button class="btn btn-primary btn-sm" type="object" name="action_view_media">
                                            <i class="fa fa-file-video-o"/> <field name="media_count"/> Phương tiện
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Media Vipassana Category Search View -->
    <record id="view_media_vipassana_category_search" model="ir.ui.view">
        <field name="name">media.vipassana.category.search</field>
        <field name="model">media.vipassana.category</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm danh mục Vipassana">
                <field name="name" string="Tên danh mục"/>
                <separator/>
                <filter string="Hoạt động" name="active" domain="[('active','=',True)]"/>
                <filter string="Đã lưu trữ" name="inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <!-- Media Vipassana Category Action -->
    <record id="action_media_vipassana_category" model="ir.actions.act_window">
        <field name="name">Danh mục Thiền Vipassana</field>
        <field name="res_model">media.vipassana.category</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_media_vipassana_category_search"/>
        <field name="context">{'search_default_active': 1}</field>
    </record>
</odoo>
