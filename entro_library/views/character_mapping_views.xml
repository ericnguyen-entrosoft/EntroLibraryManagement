<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_character_mapping_list" model="ir.ui.view">
        <field name="name">character.mapping.list</field>
        <field name="model">character.mapping</field>
        <field name="arch" type="xml">
            <list string="Danh sách ánh xạ ký tự" editable="bottom">
                <field name="van"/>
                <field name="ma_so"/>
                <field name="language_id"/>
                <field name="note" placeholder="Nhập ghi chú..."/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_character_mapping_search" model="ir.ui.view">
        <field name="name">character.mapping.search</field>
        <field name="model">character.mapping</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm ánh xạ ký tự">
                <field name="van"/>
                <field name="ma_so"/>
                <field name="language_id"/>
                <separator/>
                <filter string="Hoạt động" name="active" domain="[('active', '=', True)]"/>
                <filter string="Đã lưu trữ" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Ngôn ngữ" name="group_language" context="{'group_by': 'language_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_character_mapping" model="ir.actions.act_window">
        <field name="name">Ánh xạ ký tự</field>
        <field name="res_model">character.mapping</field>
        <field name="view_mode">list</field>
        <field name="search_view_id" ref="view_character_mapping_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo ánh xạ ký tự mới
            </p>
            <p>
                Nhấn vào nút "Tạo" để thêm ánh xạ ký tự mới.
            </p>
        </field>
    </record>
</odoo>
