<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Return Confirmation Wizard Form -->
    <record id="view_library_return_confirmation" model="ir.ui.view">
        <field name="name">library.return.confirmation.form</field>
        <field name="model">library.return.confirmation</field>
        <field name="arch" type="xml">
            <form string="Xác nhận trả sách">
                <group>
                    <group>
                        <field name="borrowing_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="total_fine_amount" widget="monetary" readonly="1"/>
                    </group>
                </group>

                <group>
                    <div colspan="2">
                        <p class="alert alert-info">
                            <strong>Hướng dẫn:</strong><br/>
                            • Chọn các bản sao muốn trả bằng cách đánh dấu cột "Trả"<br/>
                            • Bỏ chọn nếu muốn giữ lại sách để tiếp tục mượn<br/>
                            • Tổng tiền phạt sẽ được tính cho các sách được trả
                        </p>
                    </div>
                </group>

                <field name="return_confirmation_line_ids" nolabel="1">
                    <list create="0" delete="0" editable="top"
                          decoration-danger="late_days > 0"
                          decoration-bf="to_return">
                        <field name="quant_line_id" column_invisible="1"/>
                        <field name="to_return" widget="boolean_toggle"/>
                        <field name="book_id" readonly="1"/>
                        <field name="registration_number" readonly="1" string="Số ĐKCB"/>
                        <field name="location_id" readonly="1" optional="show"/>
                        <field name="due_date" readonly="1"/>
                        <field name="late_days" readonly="1"
                               decoration-danger="late_days > 0"
                               optional="show"/>
                        <field name="fine_amount" readonly="1"
                               widget="monetary"
                               decoration-danger="fine_amount > 0"
                               optional="show"/>
                        <field name="quant_state" readonly="1" optional="hide"/>
                    </list>
                </field>

                <footer>
                    <button name="process"
                            string="Xác nhận trả"
                            type="object"
                            class="oe_highlight"
                            data-hotkey="q"/>
                    <button name="process_return_all"
                            string="Trả tất cả"
                            type="object"
                            class="btn-secondary"
                            data-hotkey="w"/>
                    <button string="Hủy"
                            class="btn-secondary"
                            special="cancel"
                            data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
